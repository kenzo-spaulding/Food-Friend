<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageview_Background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fadingEdge="vertical"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_listview_item_background" />

    <TextView
        android:id="@+id/textView_FoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenuItem-Food"
        app:layout_constraintEnd_toStartOf="@+id/imageView_Divider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_CompanyLogo"
        app:layout_constraintTop_toTopOf="@+id/imageview_CompanyLogo" />

    <ImageView
        android:id="@+id/imageview_CompanyLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_Background"
        app:layout_constraintStart_toStartOf="@+id/imageview_Background"
        app:layout_constraintTop_toTopOf="@+id/imageview_Background"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView_DrinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenuItem-Drink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView_Divider"
        app:layout_constraintTop_toTopOf="@+id/imageview_CompanyLogo" />

    <TextView
        android:id="@+id/textView_FoodMods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifications"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_CompanyLogo"
        app:layout_constraintEnd_toStartOf="@+id/imageView_Divider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_CompanyLogo" />

    <TextView
        android:id="@+id/textView_DrinkMods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifications"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_CompanyLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView_Divider" />

    <TextView
        android:id="@+id/textView_FoodSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food-Size"
        app:layout_constraintBottom_toTopOf="@+id/textView_FoodMods"
        app:layout_constraintEnd_toStartOf="@+id/imageView_Divider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_CompanyLogo"
        app:layout_constraintTop_toBottomOf="@+id/textView_FoodName"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView_DrinkSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink-Size"
        app:layout_constraintBottom_toTopOf="@+id/textView_DrinkMods"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView_Divider"
        app:layout_constraintTop_toBottomOf="@+id/textView_DrinkName"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView_Divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_divider_line_vertical"
        tools:layout_editor_absoluteX="253dp" />


</androidx.constraintlayout.widget.ConstraintLayout>